<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <label for="email"><%= User.human_attribute_name(:email) %></label>
          <input type="text" name="email" id="email" value="" class="form-control" />
        </div>
        <div class="form-group">
          <label for="password"><%= User.human_attribute_name(:password) %></label>
          <input type="password" name="password" id="password" value="" class="form-control" /> </div>
        <div class="actions">
          <input type="submit" value="ログイン" class="btn btn-primary" />
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to (t '.to_register_page'), new_user_path %>
        <a href="#"><%= t '.password_forget' %></a>
      </div>
    </div>
  </div>
</div>
