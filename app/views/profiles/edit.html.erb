<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with model: @profile, url: {controller: 'profiles', action: 'update' }, local: true do |f| %>
        <%# render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class='mt-3 mb-3'>
        <%= f.label :avatar %>
          <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*' %>
          <%= image_tag current_user.avatar.url, size: '100x100', class: 'rounded-circle' %>
        </div>
        <%= f.submit (t 'defaults.update'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>