  <!-- コメントフォーム -->
<%= form_with model: comment, url: [board, comment], local: true do |f| %>
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control mb-3', row: 4 %>
    <%= f.submit class:'btn btn-primary' %>
    </div>
  </div>
<% end %>