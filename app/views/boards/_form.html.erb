      <%= form_with model: @board, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body, '本文' %>
          <%= f.text_area :body, size: "10", style: "height: 200px",  class: 'form-control' %>
        </div>
        <%= f.submit '作成', class: 'btn btn-primary' %>
      <% end %>