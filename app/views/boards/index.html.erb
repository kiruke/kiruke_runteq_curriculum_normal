<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
        <%= search_form_for @q do |f| %>
        <!--  bodyカラムに対して部分一致検索 -->
          <%= f.label :title_or_body_cont, "検索ワードを入力してください", class: "input-group mb-3"%>
          <%= f.search_field :title_or_body_cont %>
        <!-- 検索ボタン -->
          <%= f.submit "検索", class: "input-group-append" %>
        <% end %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="container">
    <div class="row">
    <% if @boards.present? %>
      <%= render partial: 'board', collection: @boards %>
    <% else %>
      <p><%= t('.no_result') %></p>
    <% end %>
    </div>
      <%= paginate @boards, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
