<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>

      <%= render 'form', { board: @board} %>

      <div class="container">
        <div class="row">
          <% if @boards.present? %>
            <%= render partial: 'board', collection: @boards %>
              <% else %>
            <p><%= t('.no_result') %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>